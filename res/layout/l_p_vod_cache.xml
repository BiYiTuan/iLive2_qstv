<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".LiveActivity" 
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/l_p_rotate_bg" >
        <ImageView
            android:id="@+id/rotate_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/l_p_rotate" />
        <ImageView 
		    android:id="@+id/program_icon"
		    android:layout_width="110dp"
		    android:layout_height="50dp"
		    android:layout_centerInParent="true"
		    android:visibility="gone"
		    android:layout_margin="25dp"
		    />
    </RelativeLayout>
    
   	<LinearLayout
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:orientation="horizontal" 
           android:layout_gravity="center"
           android:gravity="center"
           >
        <TextView 
            android:id="@+id/text_traffic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/text_30_f2f2f2"
            android:gravity="center"
            />
		<TextView 
            android:id="@+id/text_traffic_kbs"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
			style="@style/text_26_f2f2f2"
			android:layout_marginTop="4dp"
			android:gravity="center"
	            />
	</LinearLayout>

</LinearLayout>